{
	"editor.accessibilitySupport": "off",
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "line",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "'Fira Code', Anonymous Pro, monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 14,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.minimap.enabled": false,
	"editor.minimap.renderCharacters": false,
	"editor.renderWhitespace": "none",
	"editor.rulers": [200],
	"editor.smoothScrolling": true,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	"editor.wordWrap": "off",
	"editor.wordWrapColumn": 8000,
	"editor.wrappingIndent": "none",

	"terminal.integrated.env.osx": {},
	"terminal.integrated.fontSize": 16,

	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,

	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.fileNesting.expand": false,

	"breadcrumbs.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",
	"update.showReleaseNotes": false,
	"window.commandCenter": false,
	"window.nativeTabs": true,
	"workbench.colorTheme": "Gruvbox Dark Hard", // jdinhlife -> Gruvbox Theme
	"workbench.layoutControl.enabled": false,
	"workbench.tree.renderIndentGuides": "none",

	"npm.packageManager": "auto",

	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.wordWrap": "off",

	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapLineLength": 200,

	// vscodevim/Vim
	"vim.foldfix": true,
	"vim.useCtrlKeys": true,
	"vim.useSystemClipboard": true,
	"vim.commandLineModeKeyBindings": [
		{ "before": ["W"], "after": ["w"] },
		{ "before": ["w:w"], "after": ["w"] }
	],
	"vim.handleKeys": {
		"<C-w>": false
	},

	// go.dev/Go
	"go.formatTool": "gofmt",
	"go.toolsManagement.autoUpdate": true,
	"[go]": {
		"editor.defaultFormatter": "golang.go"
	},

	// prettier/prettier
	"prettier.configPath": ".prettierrc.json",
	"prettier.printWidth": 150,
	"prettier.quoteProps": "preserve",
	"prettier.useTabs": true,

	// oderwat/indent-rainbow
	"indentRainbow.colors": [
		"#282828", // bg0 - deep gray, still distinct from bg_hard
		"#3c3836", // bg2 - soft gray-brown
		"#504945", // bg3 - muted brown
		"#665c54", // gray - earthy brown-gray
		"#7c6f64", // fg4 - warmer gray
		"#928374", // fg3 - taupe
		"#a89984", // fg2 - beige
		"#bdae93" // fg1 - light cream
	],
	"indentRainbow.indicatorStyle": "light",
	"indentRainbow.lightIndicatorStyleLineWidth": 2
}
