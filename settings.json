{
	"editor.accessibilitySupport": "off",
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "line",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "'Fira Code', Anonymous Pro, monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 14,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.minimap.enabled": false,
	"editor.minimap.renderCharacters": false,
	"editor.renderWhitespace": "none",
	"editor.rulers": [200],
	"editor.smoothScrolling": true,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	"editor.wordWrap": "off",
	"editor.wordWrapColumn": 8000,
	"editor.wrappingIndent": "none",

	"terminal.integrated.env.osx": {},
	"terminal.integrated.fontSize": 16,

	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,

	"vim.foldfix": true,
	"vim.useCtrlKeys": true,
	"vim.useSystemClipboard": true,
	"vim.commandLineModeKeyBindings": [
		{ "before": ["W"], "after": ["w"] },
		{ "before": ["w:w"], "after": ["w"] }
	],
	"vim.handleKeys": {
		"<C-w>": false
	},

	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.fileNesting.expand": false,

	"breadcrumbs.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",
	"update.showReleaseNotes": false,
	"window.commandCenter": false,
	"window.nativeTabs": true,
	"workbench.colorTheme": "Pitch Black",
	"workbench.layoutControl.enabled": false,
	"workbench.tree.renderIndentGuides": "none",

	"npm.packageManager": "auto",

	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.wordWrap": "off",

	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapLineLength": 200,

	"go.formatTool": "gofmt",
	"go.toolsManagement.autoUpdate": true,
	"[go]": {
		"editor.defaultFormatter": "golang.go"
	},

	"prettier.configPath": ".prettierrc.json",
	"prettier.printWidth": 150,
	"prettier.quoteProps": "preserve",
	"prettier.useTabs": true,

	"indentRainbow.colors": [
		"rgba(0, 40, 0, 1)", // Nearly black green
		"rgba(30, 40, 0, 1)", // Nearly black olive
		"rgba(40, 40, 0, 1)", // Nearly black yellow
		"rgba(45, 20, 0, 1)", // Very dark burnt orange
		"rgba(40, 0, 0, 1)", // Deep wine red
		"rgba(40, 10, 30, 1)", // Dark raspberry/plum
		"rgba(25, 0, 45, 1)", // Deep violet
		"rgba(0, 0, 40, 1)" // Very dark navy blue
	],
	"indentRainbow.indicatorStyle": "light",
	"indentRainbow.lightIndicatorStyleLineWidth": 2
}
